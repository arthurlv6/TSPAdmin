@inherits SubItemDetailLineBase

<tr stye="background:grey">
    <td>
        @Item.Name
    </td>
    <td>
        @Item.Title
    </td>
    <td>
        <button class="btn btn-outline-primary btn-sm" @onclick="@(() => ShowDetail(Item))">
            Detail
        </button>
    </td>
</tr>
@if (Item.IsShowDetail)
{
<tr>
    <td colspan="3">
        <div class="d-flex p-3 flex-wrap">
            <div class="flex-column w-75 pr-3">
                <div>
                    <label>Titile</label>
                </div>
                <div>
                    <input type="text" class="form-control"
                           value=@Item.Title
                           placeholder="Title" @onchange="@(e=>Change(e,PatchUpdateItem.Title))" />
                </div>
                <div>
                    <label>Paragraph</label>
                </div>
                <div>
                    <textarea style="min-height:250px;width:100%" @onchange="@(e=>Change(e,PatchUpdateItem.Paragraph))">
                        @Item.Paragraph.Trim()
                        </textarea>
                </div>
            </div>

            <div class="w-25 d-flex flex-column card" style="min-width:260xp;">
                    <img data-toggle="modal" data-target="@("#imageModal"+Item.Id)" class="card-img-top img-fluid" src="@Item.Image" style="cursor:pointer" alt="@Item.Title">
                    <div class="card-body">
                        <button class="btn btn-primary">Update</button>
                        <button class="btn btn-primary">Delete</button>
                    </div>
            </div>
        </div>
    </td>
</tr>
}
<div class="modal" id="@("imageModal"+Item.Id)" tabindex="-1" role="dialog" aria-labelledby="myLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myLabel">Image</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="d-flex h-100 justify-content-center align-items-center">
                    <div class="d-flex flex-column">
                        <img src="@Item.Image" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>